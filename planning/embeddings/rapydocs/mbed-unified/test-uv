#!/bin/bash
# Test runner using UV and pytest
# Usage: ./test-uv [args passed to pytest]

set -e

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}ðŸš€ Running tests with UV and pytest...${NC}"

# Check if uv is installed
if ! command -v uv &> /dev/null; then
    echo "UV not found. Installing..."
    curl -LsSf https://astral.sh/uv/install.sh | sh
fi

# Install test dependencies if needed
echo -e "${YELLOW}ðŸ“¦ Ensuring test dependencies...${NC}"
uv pip install --system pytest pytest-cov pytest-xdist 2>/dev/null || true

# Run pytest with any provided arguments
if [ $# -eq 0 ]; then
    # Default: run all tests with coverage
    echo -e "${GREEN}Running all tests with coverage...${NC}"
    python -m pytest tests/ -v --cov=src/mbed --cov-report=term-missing
else
    # Pass through arguments to pytest
    python -m pytest "$@"
fi