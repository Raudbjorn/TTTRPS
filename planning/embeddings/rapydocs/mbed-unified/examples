#!/usr/bin/env python3
"""
Run examples for MBED unified system
Usage: ./examples [basic|all]
"""

import sys
import subprocess
from pathlib import Path

def main():
    # Default to basic example
    example = sys.argv[1] if len(sys.argv) > 1 else "basic"

    examples_dir = Path(__file__).parent / "src" / "examples"

    if example == "basic" or example == "all":
        print("ðŸš€ Running basic usage example...")
        basic_example = examples_dir / "basic_usage.py"
        subprocess.run([sys.executable, str(basic_example)])

    # Add more examples here as we create them

if __name__ == "__main__":
    main()